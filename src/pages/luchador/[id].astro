---
import Layout from "@/layouts/Layout.astro";

import { FIGHTERS } from "@/consts/fighters";
const { id, name } = Astro.params;

const fighter = FIGHTERS.find((fighter) => fighter.id === id);
export const prerender = false;
const title = "Información Luchador";

import X from "@/assets/svg/x.svg";
import Instagram from "@/assets/svg/instagram.svg";
import Youtube from "@/assets/svg/youtube.svg";
import TikTok from "@/assets/svg/tiktok.svg";
import Twitch from "@/assets/svg/twitch.svg";
import Kick from "@/assets/svg/kick.svg";
---

<Layout>
  <!-- SECCION LUCHADOR W-100% -->
  <section
    id="luchador"
    class="w-full min-h-screen bg-[url('/images/hero.webp')] bg-cover bg-center bg-no-repeat mask-fade-bottom !pt-[70px]"
  >
    <div class="w-full hscreen flex justify-center my-24">
      <div class="relative w-[95%] min-h-[550px] items-center flex gap-x-10">
        <div
          class="w-[400px] h-[500px] flex flex-col items-center justify-center"
        >
          <!-- Luchador -->
          <img
            aria-label={`Imagen de ${name}`}
            data-id={`hero-image-${id}`}
            src={`/images/fighters/big/${id}.webp`}
            alt={fighter?.name}
            class="relative w-auto h-[500px] mx-10 mb-24 z-0 hover:scale-125 transition-[.3s] mask-fade-bottom"
          />
          <!-- Nombre -->
          <img
            aria-label={`Nombre de ${name}`}
            data-id={`hero-text-${id}`}
            src={`/images/fighters/text/${id}.webp`}
            alt={"Nombre de " + name}
            class="absolute h-auto w-[350px] z-10"
          />
        </div>

        <div class="relative w-[480px] min-h-[500px] flex flex-col gap-y-4">
          <div
            class="relative w-[70%] h-[200px] border-2 text-white rounded-xl flex flex-col !py-6 !px-8 bg-pink-400/70 gap-y-1 text-sm"
          >
            <p><label>Nickname</label> : {fighter?.name}</p>
            <p><label>Nombre</label> : <span>{fighter?.realName}</span></p>
            <p><label>Altura</label> : <span>{fighter?.height} mt</span></p>
            <p><label>Edad</label> : <span>{fighter?.age} años</span></p>
            <p><label>Peso</label> : <span>{fighter?.weight} Kg.</span></p>
            <div class="w-full flex items-center gap-x-5 my-4">
              <div class="w-[60px] h-auto flex items-center">
                <img
                  src={fighter?.flag}
                  alt={fighter?.country}
                  class="flex rounded-xs"
                />
              </div>
              <span class="w-full text-sm">{fighter?.city}</span>
            </div>
          </div>

          <div
            class="relative w-full min-h-[160px] bg-pink-400/60 border-2 text-white rounded-xl flex flex-col !p-4 !px-6"
          >
            <p class="text-xs md:text-[14px]">{fighter?.bio}</p>
          </div>

          <div class="w-full h-auto flex justify-center">
            <div class="relative w-[80%] h-[90px] bg-pink-400/50 flex items-center justify-around rounded-xl">
              {
                // renderizar aqui los clips.text

                fighter?.socials.map((social, index) => (
                  <div class="w-[55px] h-[60px] flex items-center border-2 rounded-md hover:scale-125">
                    <a
                      href={social.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={social.label}
                      class="w-full h-full inline-flex items-center justify-center"
                    >
                      {
                        // @ts-ignore
                        social.id === "x" && <X class="w-7 h-7 fill-white" />
                      }
                      {
                        // @ts-ignore
                        social.id === "instagram" && (
                          <Instagram class="w-7 h-7 fill-white" />
                        )
                      }
                      {
                        // @ts-ignore
                        social.id === "youtube" && (
                          <Youtube class="w-7 h-7 fill-white" />
                        )
                      }
                      {
                        // @ts-ignore
                        social.id === "tiktok" && (
                          <TikTok class="w-7 h-7 fill-white" />
                        )
                      }
                      {
                        // @ts-ignore
                        social.id === "twitch" && (
                          <Twitch class="w-7 h-7 fill-white" />
                        )
                      }
                      {
                        // @ts-ignore
                        social.id === "kick" && (
                          <Kick class="w-6 h-6 fill-white" />
                        )
                      }
                    </a>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <div
          class="w-[350px] h-[500px] bg-blue-500 border-2 border-white rounded-xl flex justify-around"
        >
        </div>
      </div>
    </div>
  </section>
</Layout>
